{
  "plugins": ["testing-library", "jest-dom", "prettier"],
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:testing-library/react", // testing-library중에서 react에 관한 규칙
    "plugin:jest-dom/recommended", // jest dom에서 추천되는 것들만 적용
    "prettier",
    "eslint:recommended",
    "plugin:prettier/recommended",
    "airbnb"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "object-curly-newline": [
      "error",
      {
        "ImportDeclaration": {"minProperties": 3, "consistent": false, "multiline": true}
      }
    ]
  }
}
